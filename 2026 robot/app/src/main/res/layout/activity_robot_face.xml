<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewFace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:keepScreenOn="true">

    <!-- Status Text -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="ðŸ˜Š Happy"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Instructions -->
    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Tap to change â€¢ Long press to exit"
        android:textColor="#B0B0B0"
        android:textSize="12sp" />

    <!-- Face Container -->
    <LinearLayout
        android:id="@+id/faceContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Eyes Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Left Eye -->
            <ImageView
                android:id="@+id/ivLeftEye"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="40dp"
                android:background="@drawable/eye_shape"
                android:contentDescription="Left Eye" />

            <!-- Right Eye -->
            <ImageView
                android:id="@+id/ivRightEye"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="40dp"
                android:background="@drawable/eye_shape"
                android:contentDescription="Right Eye" />
        </LinearLayout>

        <!-- Mouth -->
        <ImageView
            android:id="@+id/ivMouth"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/mouth_happy"
            android:contentDescription="Mouth" />
    </LinearLayout>

    <!-- Expression Buttons (Bottom) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnHappy"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:text="ðŸ˜Š"
            android:textSize="24sp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnExcited"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:text="ðŸ¤©"
            android:textSize="24sp"
            android:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/btnSurprised"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:text="ðŸ˜®"
            android:textSize="24sp"
            android:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/btnAngry"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:text="ðŸ˜ "
            android:textSize="24sp"
            android:backgroundTint="#F44336" />
    </LinearLayout>

</RelativeLayout>
