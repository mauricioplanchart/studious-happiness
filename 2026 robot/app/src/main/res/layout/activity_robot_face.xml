<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewFace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <!-- Status Text -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Happy"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Face Container -->
    <RelativeLayout
        android:id="@+id/faceContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <!-- Eyebrows -->
        <View
            android:id="@+id/viewLeftEyebrow"
            android:layout_width="90dp"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="130dp"
            android:background="@color/textPrimary"
            android:alpha="0.9" />

        <View
            android:id="@+id/viewRightEyebrow"
            android:layout_width="90dp"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:layout_marginStart="130dp"
            android:background="@color/textPrimary"
            android:alpha="0.9" />

        <!-- Eyes Container -->
        <LinearLayout
            android:id="@+id/eyesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center">

            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="8dp">

                <!-- Left Eye -->
                <ImageView
                    android:id="@+id/ivLeftEye"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/eye_shape"
                    android:contentDescription="Left Eye" />

                <View
                    android:id="@+id/viewLeftIris"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:background="@drawable/eye_iris" />

                <View
                    android:id="@+id/viewLeftPupil"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/eye_pupil" />

                <View
                    android:id="@+id/viewLeftCatchlight"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/eye_catchlight" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="8dp">

                <!-- Right Eye -->
                <ImageView
                    android:id="@+id/ivRightEye"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/eye_shape"
                    android:contentDescription="Right Eye" />

                <View
                    android:id="@+id/viewRightIris"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:background="@drawable/eye_iris" />

                <View
                    android:id="@+id/viewRightPupil"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/eye_pupil" />

                <View
                    android:id="@+id/viewRightCatchlight"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/eye_catchlight" />
            </FrameLayout>
        </LinearLayout>

        <!-- Mouth -->
        <ImageView
            android:id="@+id/ivMouth"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/eyesContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/mouth_happy"
            android:contentDescription="Mouth" />

        <View
            android:id="@+id/viewLeftCheek"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_below="@id/eyesContainer"
            android:layout_alignStart="@id/eyesContainer"
            android:layout_marginTop="22dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/eye_shape"
            android:backgroundTint="@color/buttonRed"
            android:alpha="0.12" />

        <View
            android:id="@+id/viewRightCheek"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_below="@id/eyesContainer"
            android:layout_alignEnd="@id/eyesContainer"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/eye_shape"
            android:backgroundTint="@color/buttonRed"
            android:alpha="0.12" />

        <!-- Chat Message Display -->
        <TextView
            android:id="@+id/tvRobotMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivMouth"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="italic" />
    </RelativeLayout>

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#2E2E2E">

        <!-- Message Input -->
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Escribe o habla..."
            android:textColorHint="#B0B0B0"
            android:textColor="#FFFFFF"
            android:background="#1E1E1E"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:inputType="text" />

        <!-- Microphone Button -->
        <Button
            android:id="@+id/btnMicrophone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="ðŸŽ¤"
            android:textSize="24sp"
            android:backgroundTint="#FF9800"
            android:layout_marginEnd="8dp" />

        <!-- Send Button -->
        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Hablar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:minWidth="60dp" />
    </LinearLayout>

</LinearLayout>
